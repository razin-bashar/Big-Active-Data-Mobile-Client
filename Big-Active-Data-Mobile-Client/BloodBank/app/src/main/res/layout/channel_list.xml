<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bloodgroup"
        android:id="@+id/editText6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="location"
        android:id="@+id/editText7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Day"
        android:id="@+id/editText8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="220dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nearbyTweetChannel"
        android:id="@+id/button2"
        android:background="#d86b93"
        android:onClick="nearbyTweetChannel"
        android:layout_gravity="center_horizontal" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="nearbyDonationGroupLocation"
        android:id="@+id/button3"
        android:background="#d86b93"
        android:onClick="nearbyDonationGroupLocation"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="nearbyDonationGroupLocTime"
        android:background="#d86b93"
        android:id="@+id/button4"
        android:onClick="nearbyDonationGroupLocTime"
        android:layout_gravity="center_horizontal" />
</LinearLayout>